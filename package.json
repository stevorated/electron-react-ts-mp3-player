{
    "name": "pleya",
    "version": "1.0.0",
    "description": "",
    "main": "./dist/index.js",
    "author": {
        "name": "stevorated"
    },
    "build": {
        "appId": "com.stevorated.pleya",
        "files": [
            "dist/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "build/"
        },
        "icon": "assets/logo.png",
        "publish": null
    },
    "scripts": {
        "start": "yarn clean && cross-env NODE_ENV=development yarn bundle:ui && cross-env NODE_ENV=development yarn bundle:app",
        "dev": "yarn clean && concurrently \"yarn watch:ui\" \"yarn watch:app\"",
        "debug": "yarn clean && cross-env DEBUG=true concurrently \"yarn watch:ui\" \"yarn watch:app\"",
        "bundle": "yarn clean && cross-env NODE_ENV=production yarn bundle:ui && cross-env NODE_ENV=production yarn bundle:app",
        "bundle:ui": "yarn clean && webpack --mode development --config webpack.config.ui.js",
        "bundle:app": "webpack --config ./webpack.config.main.js",
        "watch:ui": "yarn clean && webpack --watch --mode development --config webpack.config.ui.js",
        "watch:app": "webpack --watch --config ./webpack.config.main.js",
        "postinstall": "electron-builder install-app-deps",
        "run:electron": "electron ./dist/index.js",
        "run:app": "electron ./dist/main/main.js",
        "schema": "tsc --build tsconfig.main.json && node ./dist/services/db/playground.js",
        "schema:watch": "tsc-watch --build tsconfig.main.json --onSuccess \"node ./dist/services/db/playground.js\"",
        "scss": "node-sass scss -o html",
        "clean": "rimraf ./dist",
        "clean:build": "rimraf ./build",
        "less:junk": "lessc ./junk/audio.less ./junk/audio.css",
        "build": "yarn clean:build && yarn && yarn bundle && electron-builder"
    },
    "keywords": [],
    "license": "ISC",
    "dependencies": {
        "compression": "^1.7.4",
        "dayjs": "^1.8.21",
        "dotenv": "^8.1.0",
        "express": "^4.17.1",
        "file-loader": "^5.1.0",
        "fluent-ffmpeg": "^2.1.2",
        "gsap": "^3.2.4",
        "immutability-helper": "^3.0.1",
        "react": "16.12.0",
        "react-dnd": "^10.0.2",
        "react-dnd-html5-backend": "^10.0.2",
        "react-dom": "16.12.0",
        "react-helmet": "^5.2.1",
        "react-icons": "^3.9.0",
        "react-modal": "3.11.2",
        "react-redux": "^7.2.0",
        "react-slider": "^1.0.3",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0",
        "rimraf": "^3.0.2",
        "simplex-noise": "^2.4.0",
        "sqlite3": "^4.1.1",
        "style-loader": "1.1.3",
        "styled-components": "^5.0.1",
        "ts-node": "^8.6.2",
        "url-loader": "^3.0.0",
        "uuid": "7.0.2",
        "webpack-merge": "^4.2.2",
        "webpack-shell-plugin": "0.5.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@babel/core": "^7.8.6",
        "@types/compression": "^1.7.0",
        "@types/dotenv": "^8.2.0",
        "@types/electron": "^1.6.10",
        "@types/electron-builder": "^2.8.0",
        "@types/express": "^4.17.1",
        "@types/file-loader": "^4.2.0",
        "@types/fluent-ffmpeg": "^2.1.14",
        "@types/gsap": "^1.20.2",
        "@types/immutability-helper": "^2.6.3",
        "@types/less": "^3.0.1",
        "@types/lorem-ipsum": "^2.0.0",
        "@types/node": "^12.7.12",
        "@types/node-sass": "^4.11.0",
        "@types/nodemon": "^1.19.0",
        "@types/react": "^16.9.22",
        "@types/react-dnd": "^3.0.2",
        "@types/react-dnd-html5-backend": "^3.0.2",
        "@types/react-dom": "^16.9.5",
        "@types/react-modal": "3.10.5",
        "@types/react-redux": "^7.1.7",
        "@types/react-slider": "^1.0.0",
        "@types/source-map-support": "^0.5.1",
        "@types/sqlite3": "^3.1.6",
        "@types/styled-components": "^5.0.1",
        "@types/uuid": "7.0.0",
        "@types/winston": "^2.4.4",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.6",
        "concurrently": "^5.1.0",
        "css-loader": "^3.4.2",
        "electron": "^8.0.1",
        "electron-builder": "^22.4.1",
