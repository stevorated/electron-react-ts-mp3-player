        "nodemon": "^2.0.2",
        "prettier": "^1.19.1",
        "redux-devtools-extension": "^2.13.8",
        "sass-loader": "^8.0.2",
        "source-map-support": "^0.5.16",
        "terser-webpack-plugin": "^2.3.5",
        "tsc-watch": "^4.0.0",
        "typescript": "^3.8.2",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "4.41.6",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3"
    },
    "alias": {
        "@views": "./src/views",
        "@main": "./src/main"
    }
}
